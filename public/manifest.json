{
  "manifest_version": 3,
  "name": "Element Inspector Pro (Side Panel)",
  "version": "1.1.0",
  "description": "Inspect parent/child elements, search, and view history in a side panel.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "clipboardWrite",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Open Element Inspector Pro"
  },
  "side_panel": {
    "default_path": "popup/index.html"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
